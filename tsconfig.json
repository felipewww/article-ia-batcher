{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
    },
    "include": [
        "src/**/*"
    ]
}